<div class="container py-4">
  <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
    <div>
      <h1 class="h3 mb-0"><%= t('admin.bookings.index.title') %></h1>
      <div class="text-muted">
        <%= t('admin.bookings.index.subtitle') %>
        <% if @unread_conversations_count.to_i.positive? %>
          · <span class="badge text-bg-warning"><%= t('admin.bookings.index.unread_badge', count: @unread_conversations_count) %></span>
        <% end %>
      </div>
    </div>

    <div class="d-flex gap-2"></div>
  </div>

  <div class="row g-4">
    <div class="col-12 col-lg-4">
      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h2 class="h5 mb-0"><%= t('admin.bookings.index.messages_title') %></h2>
          </div>

          <% if @recent_messages.blank? %>
            <p class="text-muted mb-0"><%= t('admin.bookings.index.no_messages') %></p>
          <% else %>
            <div class="list-group list-group-flush">
              <% @recent_messages.each do |message| %>
                <% booking = message.booking %>
                <% unread = message.sender_type == "User" && (booking.owner_last_read_at.nil? || message.created_at > booking.owner_last_read_at) %>
                <%= link_to admin_booking_path(id: booking), class: "list-group-item list-group-item-action" do %>
                  <div class="d-flex justify-content-between align-items-baseline gap-2">
                    <div class="d-flex align-items-center gap-2 text-truncate">
                      <strong class="text-truncate"><%= message.sender&.respond_to?(:email) ? message.sender.email : "—" %></strong>
                      <% if unread %>
                        <span class="badge text-bg-warning">Non lu</span>
                      <% end %>
                    </div>
                    <small class="text-muted"><%= message.created_at.in_time_zone.strftime("%d/%m %H:%M") %></small>
                  </div>
                  <div class="text-muted small">
                    <%= booking.room&.name %> · Réservation #<%= booking.id %>
                  </div>
                  <div><%= truncate(message.body.to_s, length: 90) %></div>
                <% end %>
              <% end %>
            </div>

            <% if @messages_total_pages.to_i > 1 %>
              <nav class="mt-3" aria-label="Messages pagination">
                <ul class="pagination pagination-sm justify-content-center mb-0">
                  <li class="page-item <%= @messages_page.to_i <= 1 ? 'disabled' : '' %>">
                    <%= link_to "←", (@messages_page.to_i <= 1 ? "#" : url_for(messages_page: @messages_page.to_i - 1)), class: "page-link", aria: { label: "Previous" } %>
                  </li>

                  <% 1.upto(@messages_total_pages.to_i) do |p| %>
                    <li class="page-item <%= p == @messages_page.to_i ? 'active' : '' %>">
                      <%= link_to p, url_for(messages_page: p), class: "page-link", aria: { current: (p == @messages_page.to_i ? "page" : nil) } %>
                    </li>
                  <% end %>

                  <li class="page-item <%= @messages_page.to_i >= @messages_total_pages.to_i ? 'disabled' : '' %>">
                    <%= link_to "→", (@messages_page.to_i >= @messages_total_pages.to_i ? "#" : url_for(messages_page: @messages_page.to_i + 1)), class: "page-link", aria: { label: "Next" } %>
                  </li>
                </ul>
              </nav>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-8">
      <div class="card mb-4">
        <div class="card-body">
          <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
            <div>
              <h2 class="h5 mb-0"><%= t('admin.bookings.index.manage_rooms') %></h2>
              <div class="text-muted small"><%= t('admin.bookings.index.manage_rooms_subtitle') %></div>
            </div>

            <div class="d-flex flex-wrap gap-2">
              <%= link_to t('admin.bookings.index.planning'), admin_rooms_path, class: "btn btn-outline-primary btn-sm" %>
              <%= link_to t('admin.bookings.index.create_room'), new_admin_room_path, class: "btn btn-primary btn-sm" %>
            </div>
          </div>

          <hr class="my-3" />

          <% if @rooms.blank? %>
            <p class="text-muted mb-0"><%= t('admin.bookings.index.no_rooms') %></p>
          <% else %>
            <div class="list-group list-group-flush">
              <% @rooms.each do |room| %>
                <div class="list-group-item d-flex flex-wrap justify-content-between align-items-center gap-2">
                  <div class="fw-semibold"><%= room.name %></div>

                  <div class="d-inline-flex flex-wrap gap-2">
                    <%= link_to t('admin.bookings.index.planning_button'), admin_room_path(id: room), class: "btn btn-outline-primary btn-sm" %>
                    <%= link_to t('admin.bookings.index.edit_button'), edit_admin_room_path(id: room), class: "btn btn-outline-secondary btn-sm" %>
                    <%= button_to t('admin.bookings.index.delete_button'),
                          admin_room_path(id: room),
                          method: :delete,
                          data: { turbo_confirm: t('admin.bookings.index.delete_confirm') },
                          class: "btn btn-warning btn-sm" %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="h5 mb-0"><%= t('admin.bookings.index.reservations_title') %></h2>
            <%= link_to t('admin.bookings.index.manage_reservations'), admin_bookings_path, class: "btn btn-outline-primary btn-sm" %>
          </div>

          <% if @bookings.blank? %>
            <p class="text-muted mb-0"><%= t('admin.bookings.index.no_reservations') %></p>
          <% else %>
			<% current_sort = @current_sort.presence || params[:sort].presence || "reservation" %>
			<% current_direction = @current_direction.presence || params[:direction].presence || "desc" %>
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead>
                  <tr>
					<th><%= sortable_table_header("Réservation", sort: "reservation", current_sort: current_sort, current_direction: current_direction, reset_page_param: :bookings_page) %></th>
					<th><%= sortable_table_header("Hébergement", sort: "room", current_sort: current_sort, current_direction: current_direction, reset_page_param: :bookings_page) %></th>
					<th><%= sortable_table_header("Client", sort: "client", current_sort: current_sort, current_direction: current_direction, reset_page_param: :bookings_page) %></th>
					<th><%= sortable_table_header("Dates", sort: "dates", current_sort: current_sort, current_direction: current_direction, reset_page_param: :bookings_page) %></th>
					<th><%= sortable_table_header("Statut", sort: "status", current_sort: current_sort, current_direction: current_direction, reset_page_param: :bookings_page) %></th>
                  </tr>
                </thead>
                <tbody>
                  <% @bookings.each do |booking| %>
                    <tr>
                      <td><%= link_to "##{booking.id}", admin_booking_path(id: booking) %></td>
                      <td><%= booking.room&.name %></td>
            <td class="text-truncate" style="max-width: 220px;">
              <div class="fw-semibold"><%= booking.user&.display_name %></div>
              <% if booking.user&.email.present? %>
                <div class="text-muted small"><%= booking.user.email %></div>
              <% end %>
            </td>
                      <td><%= booking.start_date.strftime("%d/%m/%Y") %> → <%= booking.end_date.strftime("%d/%m/%Y") %></td>
                      <td><span class="badge <%= booking_status_badge_class(booking.status) %>"><%= booking_status_label(booking.status) %></span></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

            <% if @bookings_total_pages.to_i > 1 %>
              <nav class="mt-3" aria-label="Bookings pagination">
                <ul class="pagination pagination-sm justify-content-center mb-0">
                  <li class="page-item <%= @bookings_page.to_i <= 1 ? 'disabled' : '' %>">
                    <%= link_to "←", (@bookings_page.to_i <= 1 ? "#" : url_for(bookings_page: @bookings_page.to_i - 1)), class: "page-link", aria: { label: "Previous" } %>
                  </li>

                  <% 1.upto(@bookings_total_pages.to_i) do |p| %>
                    <li class="page-item <%= p == @bookings_page.to_i ? 'active' : '' %>">
                      <%= link_to p, url_for(bookings_page: p), class: "page-link", aria: { current: (p == @bookings_page.to_i ? "page" : nil) } %>
                    </li>
                  <% end %>

                  <li class="page-item <%= @bookings_page.to_i >= @bookings_total_pages.to_i ? 'disabled' : '' %>">
                    <%= link_to "→", (@bookings_page.to_i >= @bookings_total_pages.to_i ? "#" : url_for(bookings_page: @bookings_page.to_i + 1)), class: "page-link", aria: { label: "Next" } %>
                  </li>
                </ul>
              </nav>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
