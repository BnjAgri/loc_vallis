<div class="container py-4">
  <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
    <div>
      <h1 class="h3 mb-0">Tableau de bord</h1>
      <div class="text-muted">
        Messages, réservations et gestion des hébergements
        <% if @unread_conversations_count.to_i.positive? %>
          · <span class="badge text-bg-warning"><%= @unread_conversations_count %> non lu(s)</span>
        <% end %>
      </div>
    </div>

    <div class="d-flex gap-2"></div>
  </div>

  <div class="row g-4">
    <div class="col-12 col-lg-4">
      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h2 class="h5 mb-0">Messages</h2>
          </div>

          <% if @recent_messages.blank? %>
            <p class="text-muted mb-0">Aucun message pour le moment.</p>
          <% else %>
            <div class="list-group list-group-flush">
              <% @recent_messages.each do |message| %>
                <% booking = message.booking %>
                <% unread = message.sender_type == "User" && (booking.owner_last_read_at.nil? || message.created_at > booking.owner_last_read_at) %>
                <%= link_to admin_booking_path(booking), class: "list-group-item list-group-item-action" do %>
                  <div class="d-flex justify-content-between align-items-baseline gap-2">
                    <div class="d-flex align-items-center gap-2 text-truncate">
                      <strong class="text-truncate"><%= message.sender&.respond_to?(:email) ? message.sender.email : "—" %></strong>
                      <% if unread %>
                        <span class="badge text-bg-warning">Non lu</span>
                      <% end %>
                    </div>
                    <small class="text-muted"><%= message.created_at.in_time_zone.strftime("%d/%m %H:%M") %></small>
                  </div>
                  <div class="text-muted small">
                    <%= booking.room&.name %> · Réservation #<%= booking.id %>
                  </div>
                  <div><%= truncate(message.body.to_s, length: 90) %></div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-8">
      <div class="card mb-4">
        <div class="card-body">
          <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
            <div>
              <h2 class="h5 mb-0">Gérer les chambres</h2>
              <div class="text-muted small">Créer, éditer, tarifs & périodes d'ouverture</div>
            </div>

            <div class="d-flex flex-wrap gap-2">
              <%= link_to "Planning", admin_rooms_path, class: "btn btn-outline-primary btn-sm" %>
              <%= link_to "Créer une chambre", new_admin_room_path, class: "btn btn-primary btn-sm" %>
            </div>
          </div>

          <hr class="my-3" />

          <% if @rooms.blank? %>
            <p class="text-muted mb-0">Aucune chambre pour le moment.</p>
          <% else %>
            <div class="list-group list-group-flush">
              <% @rooms.each do |room| %>
                <div class="list-group-item d-flex flex-wrap justify-content-between align-items-center gap-2">
                  <div class="fw-semibold"><%= room.name %></div>

                  <div class="d-inline-flex flex-wrap gap-2">
                    <%= link_to "Planning", admin_room_path(room), class: "btn btn-outline-primary btn-sm" %>
                    <%= link_to "Modifier", edit_admin_room_path(room), class: "btn btn-outline-secondary btn-sm" %>
                    <%= button_to "Supprimer",
                          admin_room_path(room),
                          method: :delete,
                          data: { turbo_confirm: "Supprimer cette chambre ?" },
                          class: "btn btn-warning btn-sm" %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="h5 mb-0">Réservations</h2>
            <%= link_to "Gérer les réservations", admin_rooms_path, class: "btn btn-outline-primary btn-sm" %>
          </div>

          <% if @bookings.blank? %>
            <p class="text-muted mb-0">Aucune réservation pour le moment.</p>
          <% else %>
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead>
                  <tr>
                    <th>Réservation</th>
                    <th>Hébergement</th>
                    <th>Client</th>
                    <th>Dates</th>
                    <th>Statut</th>
                  </tr>
                </thead>
                <tbody>
                  <% @bookings.each do |booking| %>
                    <tr>
                      <td><%= link_to "##{booking.id}", admin_booking_path(booking) %></td>
                      <td><%= booking.room&.name %></td>
                      <td class="text-truncate" style="max-width: 220px;"><%= booking.user&.email %></td>
                      <td><%= booking.start_date.strftime("%d/%m/%Y") %> → <%= booking.end_date.strftime("%d/%m/%Y") %></td>
                      <td><span class="badge <%= booking_status_badge_class(booking.status) %>"><%= booking_status_label(booking.status) %></span></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
