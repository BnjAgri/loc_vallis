<div class="container py-4">
  <div class="card mb-4">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-0"><%= t('admin.rooms.edit.title') %></h1>
        <%= link_to t('admin.rooms.edit.back_link'), admin_room_path(@room), class: "btn btn-link" %>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <%= render "form",
        room: @room,
        submit_label: t('admin.rooms.edit.submit_button'),
        back_label: t('admin.rooms.edit.back_link'),
        back_path: admin_room_path(@room) %>
    </div>
  </div>
</div>
