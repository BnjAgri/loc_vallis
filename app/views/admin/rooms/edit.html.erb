<div class="container py-4">
  <div class="card mb-4">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-0"><%= t('admin.rooms.edit.title') %></h1>
        <%= link_to t('admin.rooms.edit.back_link'), admin_room_path(@room), class: "btn btn-link" %>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <%= simple_form_for([:admin, @room]) do |f| %>
        <%= f.input :name, label: "Nom" %>
        <%= f.input :description, as: :text, label: "Description", hint: "Décrivez la chambre, ses équipements, etc." %>
        <%= f.input :capacity, label: "Capacité", hint: "Optionnel" %>
        <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Photos", hint: "Importer une ou plusieurs images" %>
        <%= f.input :room_url, as: :text, label: "URLs d'images", hint: "Une URL d'image par ligne" %>

        <div class="d-flex align-items-center gap-2">
          <%= f.submit t('admin.rooms.edit.submit_button'), class: "btn btn-primary" %>
          <%= link_to t('admin.rooms.edit.back_link'), admin_room_path(@room), class: "btn btn-link" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
