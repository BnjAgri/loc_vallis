<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Rooms</h1>
    <%= link_to "New room", new_admin_room_path, class: "btn btn-primary" %>
  </div>

  <% if @rooms.empty? %>
    <p class="text-muted">No rooms yet.</p>
  <% else %>
    <div class="list-group">
      <% @rooms.each do |room| %>
        <%= link_to admin_room_path(room), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
          <div>
            <div class="fw-bold"><%= room.name %></div>
            <% if room.capacity.present? %>
              <small class="text-muted">Capacity: <%= room.capacity %></small>
            <% end %>
          </div>
          <span class="text-muted">Manage</span>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
