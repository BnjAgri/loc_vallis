<div class="container py-4">
  <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
    <div>
      <h1 class="h3 mb-0"><%= t("inbox.title") %></h1>
      <div class="text-muted">
        <%= t("inbox.subtitle") %>
        <% if @unread_conversations_count.to_i.positive? %>
          · <span class="badge text-bg-warning"><%= t("inbox.counts.unread_conversations", count: @unread_conversations_count) %></span>
          · <span class="text-muted"><%= t("inbox.counts.unread_messages", count: @unread_messages_count) %></span>
        <% end %>
      </div>
    </div>

    <div class="d-flex flex-wrap gap-2">
      <div class="btn-group" role="group" aria-label="Inbox filters">
        <%= link_to t("shared.actions.all"), inbox_path, class: "btn btn-outline-primary #{@filter.blank? ? "active" : ""}" %>
        <%= link_to t("shared.actions.unread"), inbox_path(filter: "unread"), class: "btn btn-outline-primary #{@filter == "unread" ? "active" : ""}" %>
      </div>
      <%= link_to t("shared.nav.my_bookings"), bookings_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <% if @bookings.blank? %>
    <div class="card">
      <div class="card-body">
        <p class="text-muted mb-0"><%= t("inbox.empty") %></p>
      </div>
    </div>
  <% else %>
    <div class="card">
      <div class="card-body p-0">
        <div class="list-group list-group-flush">
          <% @bookings.each do |booking| %>
            <% last_message = @last_message_by_booking_id[booking.id] %>
            <% unread_count = @unread_count_by_booking_id[booking.id].to_i %>
            <% item_classes = [
              "list-group-item",
              "list-group-item-action",
              "lv-inbox-item",
              (unread_count.positive? ? "lv-inbox-item--unread" : nil)
            ].compact.join(" ") %>

            <%= link_to booking_path(id: booking), class: item_classes do %>
              <div class="d-flex justify-content-between align-items-start gap-2">
                <div class="flex-grow-1" style="min-width: 0;">
                  <div class="d-flex align-items-center gap-2 flex-wrap">
                    <strong class="text-truncate" style="max-width: 520px;">
                      <%= booking.room&.name %>
                    </strong>

                    <% if booking.room&.owner&.email.present? %>
                      <span class="text-muted">·</span>
                      <span class="text-muted text-truncate" style="max-width: 360px;">
                        <%= booking.room.owner.email %>
                      </span>
                    <% end %>

                    <span class="text-muted">·</span>
                    <span class="text-muted"><%= t("inbox.booking_ref", id: booking.id) %></span>

                    <% if unread_count.positive? %>
                      <span class="badge text-bg-warning"><%= t("inbox.counts.unread_badge", count: unread_count) %></span>
                    <% end %>
                  </div>

                  <div class="text-muted small mt-1">
                    <%= booking.start_date %> → <%= booking.end_date %>
                    <span class="mx-1">·</span>
                    <span class="badge <%= booking_status_badge_class(booking.status) %>"><%= booking_status_label(booking.status) %></span>
                  </div>

                  <div class="mt-2">
                    <% if last_message.present? %>
                      <% sender = last_message.sender_type == "User" ? t("messages.sender.me") : t("messages.sender.host") %>
                      <span class="text-muted"><%= t("inbox.last_message_prefix", sender: sender) %></span>
                      <%= truncate(last_message.body.to_s, length: 140) %>
                    <% else %>
                      <span class="text-muted"><%= t("inbox.no_messages") %></span>
                    <% end %>
                  </div>
                </div>

                <div class="text-muted small text-end" style="white-space: nowrap;">
                  <% if last_message.present? %>
                    <%= l(last_message.created_at.in_time_zone, format: :short) %>
                  <% else %>
                    <%= l(booking.created_at.in_time_zone, format: :short) %>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
