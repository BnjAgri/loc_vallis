<nav class="navbar navbar-expand-sm navbar-light navbar-lewagon" data-controller="sticky-header">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <i class="fa fa-home" aria-hidden="true"></i>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <%= link_to t("shared.nav.rooms"), rooms_path, class: "nav-link" %>
        </li>

        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to t("shared.nav.my_bookings"), bookings_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to inbox_path, class: "nav-link" do %>
              <%= t("shared.nav.inbox") %>
              <% if @user_unread_conversations_count.to_i.positive? %>
                <span class="badge text-bg-warning"><%= @user_unread_conversations_count %></span>
              <% end %>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to t("shared.nav.logout"), logout_path, data: { turbo_method: :delete }, class: "nav-link" %>
          </li>
        <% elsif owner_signed_in? %>
          <li class="nav-item">
            <%= link_to t("shared.nav.dashboard"), admin_bookings_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to admin_inbox_path, class: "nav-link" do %>
              <%= t("shared.nav.inbox") %>
              <% if @owner_unread_conversations_count.to_i.positive? %>
                <span class="badge text-bg-warning"><%= @owner_unread_conversations_count %></span>
              <% end %>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to t("shared.nav.accommodations"), admin_rooms_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to t("shared.nav.logout"), logout_path, data: { turbo_method: :delete }, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to login_path(return_to: request.fullpath), class: "nav-link", data: { turbo: false }, aria: { label: t("shared.nav.login") } do %>
              <i class="fa fa-user-plus" aria-hidden="true"></i>
            <% end %>
          </li>
        <% end %>

        <li class="nav-item">
          <%= link_to t("shared.locale.fr"), url_for(locale: nil), class: ["nav-link", (I18n.locale == :fr ? "active" : nil)].compact.join(" ") %>
        </li>
        <li class="nav-item">
          <%= link_to t("shared.locale.en"), url_for(locale: :en), class: ["nav-link", (I18n.locale == :en ? "active" : nil)].compact.join(" ") %>
        </li>
      </ul>
    </div>
  </div>
</nav>
