<% all_images = if @room.photos.attached?
  @room.photos.map { |photo| url_for(photo) }
elsif @room.image_urls.any?
  @room.image_urls
else
  ["https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg"]
end %>

<% main_image_url = all_images.first %>

<% min_period = @room.opening_periods.order(:nightly_price_cents).first %>

<%# Layout header: 2-column grid (left = room card, right = réservation/date picker sidebar). %>
<div class="row g-4 align-items-start room-show-header">
  <%# Left column: main room presentation card (image + title + meta + starting price). %>
  <div class="col-12 col-lg">
    <%# Reuse the shared "card-trip" component styles for a prominent hero card. %>
    <div class="card-trip">
      <% if all_images.length > 1 %>
        <div id="roomCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% all_images.each_with_index do |img_url, idx| %>
              <div class="carousel-item <%= 'active' if idx == 0 %>">
                <%= image_tag img_url, alt: "#{@room.name} #{idx + 1}", class: "d-block w-100", style: "object-fit: cover; height: 400px;" %>
              </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#roomCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Précédent</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#roomCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Suivant</span>
          </button>
        </div>

        <div class="d-flex gap-2 mt-3" style="overflow-x: auto;">
          <% all_images.each_with_index do |img_url, idx| %>
            <button
              type="button"
              class="carousel-thumbnail <%= 'border-primary border-2' if idx == 0 %>"
              data-bs-target="#roomCarousel"
              data-bs-slide-to="<%= idx %>"
              style="flex-shrink: 0; width: 80px; height: 80px; border: 1px solid #ddd; padding: 0; cursor: pointer; background: none;"
            >
              <%= image_tag img_url, alt: "Thumbnail #{idx + 1}", class: "d-block w-100 h-100", style: "object-fit: cover;" %>
            </button>
          <% end %>
        </div>
      <% else %>
        <%= image_tag main_image_url, alt: @room.name %>
      <% end %>

      <%# Card content area: room name/description + capacity + price, aligned with flex. %>
      <div class="card-trip-infos">
        <div>
          <h2><%= @room.name %></h2>
          <% if @room.description.present? %>
            <p><%= truncate(@room.description, length: 120) %></p>
          <% else %>
            <p>&nbsp;</p>
          <% end %>
        </div>

        <% if @room.capacity.present? %>
          <small class="text-muted">Capacité : <%= @room.capacity %> pers.</small>
        <% end %>

        <% if min_period.present? %>
          <h2 class="card-trip-pricing"><%= number_to_currency(min_period.nightly_price_cents / 100.0, unit: "€", format: "%n %u") %>/nuit</h2>
        <% end %>
      </div>
    </div>
  </div>

  <%# Right column: fixed-width sidebar (desktop) for date selection + réservation price summary. %>
  <div class="col-12 col-lg-auto ms-lg-auto pe-lg-0 room-show-datepicker-col">
    <%# Wrapper used to control the sidebar width and flush it to the right edge. %>
    <div class="room-show-datepicker">
      <%# Short instruction text for the user. %>
      <p class="text-muted mb-2">Sélectionnez vos dates pour afficher le total et réserver.</p>

      <%# Réservation summary container: listens to calendar events and updates the right panel. %>
      <div
        class="row"
        data-controller="booking-summary"
        data-booking-summary-nightly-price-cents-value="<%= min_period&.nightly_price_cents.to_i %>"
        data-booking-summary-currency-value="<%= min_period&.currency.to_s.presence || "EUR" %>"
        data-action="availability-calendar:range-selected->booking-summary#update"
      >
        <%# Datepicker column: inline range picker (Stimulus + Flatpickr). %>
        <div class="col-12 col-lg-8">
          <input
            type="text"
            data-controller="availability-calendar"
            data-availability-calendar-enabled-ranges-value='<%= (@enabled_ranges || []).to_json %>'
            data-availability-calendar-disabled-ranges-value='<%= (@disabled_ranges || []).to_json %>'
            aria-label="Availability calendar"
          />
        </div>

        <%# Summary column: hidden until a date range is selected; shows nightly/nights/total + CTA. %>
        <div class="col-12 col-lg-4 mt-3 mt-lg-0">
          <div class="card p-3 d-none" data-booking-summary-target="panel">
            <div class="mb-2">
              <div class="text-muted">Tarif / nuit</div>
              <div data-booking-summary-target="nightly"></div>
            </div>

            <div class="mb-2">
              <div class="text-muted">Nombre de nuits</div>
              <div data-booking-summary-target="nights"></div>
            </div>

            <div class="mb-3">
              <div class="text-muted">Total</div>
              <div class="fw-bold" data-booking-summary-target="total"></div>
            </div>

            <% if user_signed_in? %>
              <%= link_to "Réserver", new_room_booking_path(@room), class: "btn btn-primary w-100", data: { "booking-summary-target": "cta" } %>
            <% else %>
              <%= link_to "Réserver", login_path(return_to: new_room_booking_path(@room)), class: "btn btn-primary w-100", data: { turbo: false, "booking-summary-target": "cta" } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%# Reviews section: reuse card-trip styling as a container (without image). %>
<div class="card-trip mt-5">
  <%# Card content area: title + average rating + latest reviews list. %>
  <div class="card-trip-infos w-100 align-items-start">
    <div class="w-100">
      <h2 class="h4 mb-3">Avis</h2>

      <% if @reviews_count.to_i.positive? %>
        <div class="d-flex align-items-center gap-2">
          <span class="review-stars"><%= stars_for_rating(@average_rating) %></span>
          <span class="text-muted">
            <%= number_with_precision(@average_rating.to_f, precision: 1) %>/5 · <%= pluralize(@reviews_count, "avis") %>
          </span>
        </div>

        <%# Latest reviews list: we show the 2 most recent reviews for this room. %>
        <div class="mt-3">
          <% @latest_reviews.each do |review| %>
            <%# Single review card: author + date + stars + comment. %>
            <div class="card p-3 mb-2">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <strong><%= review.user.display_name %></strong>
                  <small class="text-muted">· <%= review.created_at.in_time_zone.strftime("%d/%m/%Y") %></small>
                </div>
                <span class="review-stars"><%= stars_for_rating(review.rating) %></span>
              </div>
              <div class="mt-2"><%= simple_format(review.comment) %></div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted mb-0">Aucun avis pour le moment.</p>
      <% end %>
    </div>
  </div>
</div>
