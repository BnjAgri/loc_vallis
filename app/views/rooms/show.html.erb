<%
  normalize_image_url = lambda do |raw_url|
    url = raw_url.to_s.strip
    next nil if url.blank?
    next url if url.match?(/\A(data:|https?:\/\/|\/)/)
    next "https:#{url}" if url.start_with?("//")

    # If the URL looks like a host/path (e.g. "example.com/image.jpg"), treat it as an external URL.
    next "https://#{url}" if url.match?(/\A[a-z0-9.-]+\.[a-z]{2,}\//i)

    url
  end
%>

<% all_images = if @room.photos.attached?
  @room.photos.map { |photo| url_for(photo) }
elsif @room.image_urls.any?
  @room.image_urls.map { |u| normalize_image_url.call(u) }.compact
else
  ["https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg"]
end %>

<% main_image_url = all_images.first %>

<% min_period = @room.opening_periods.order(:nightly_price_cents).first %>

<%= render "shared/ui/page_header",
  title: @room.name,
  subtitle: [(@room.capacity.present? ? t(".capacity", count: @room.capacity) : nil), (min_period.present? ? "À partir de #{format_price(min_period.nightly_price_cents, currency: min_period.currency)}#{t(".per_night_suffix")}" : nil)].compact.join(" · ") %>

<%# Layout header: 2-column grid (left = room card, right = réservation/date picker sidebar). %>
<div class="row g-4 align-items-start room-show-header">
  <%# Left column: main room presentation card (image + title + meta + starting price). %>
  <div class="col-12 col-lg">
    <div class="card lv-card overflow-hidden">

      <% if all_images.length > 1 %>
        <div id="roomCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% all_images.each_with_index do |img_url, idx| %>
              <div class="carousel-item <%= 'active' if idx == 0 %>">
                <%= image_tag img_url, alt: "#{@room.name} #{idx + 1}", class: "d-block w-100", style: "object-fit: cover; height: 400px;" %>
              </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#roomCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden"><%= t(".carousel_previous") %></span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#roomCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden"><%= t(".carousel_next") %></span>
          </button>
        </div>

        <div class="d-flex gap-2 mt-3" style="overflow-x: auto;">
          <% all_images.each_with_index do |img_url, idx| %>
            <button
              type="button"
              class="carousel-thumbnail <%= 'border-primary border-2' if idx == 0 %>"
              data-bs-target="#roomCarousel"
              data-bs-slide-to="<%= idx %>"
              style="flex-shrink: 0; width: 80px; height: 80px; border: 1px solid #ddd; padding: 0; cursor: pointer; background: none;"
            >
              <%= image_tag img_url, alt: t(".thumbnail_alt", index: idx + 1), class: "d-block w-100 h-100", style: "object-fit: cover;" %>
            </button>
          <% end %>
        </div>
      <% else %>
        <%= image_tag main_image_url, alt: @room.name, class: "w-100", style: "object-fit: cover; height: 400px;" %>
      <% end %>

      <div class="card-body">
        <% if @room.description.present? %>
          <p class="mb-0"><%= @room.description %></p>
        <% else %>
          <p class="mb-0 lv-meta">&nbsp;</p>
        <% end %>
      </div>
    </div>
  </div>

  <%# Right column: fixed-width sidebar (desktop) for date selection + réservation price summary. %>
  <div class="col-12 col-lg-auto ms-lg-auto pe-lg-0 room-show-datepicker-col">
    <%# Wrapper used to control the sidebar width and flush it to the right edge. %>
    <div class="room-show-datepicker">
      <div class="card lv-card">
        <div class="card-body">
          <div class="text-uppercase lv-muted small"><%= t(".select_dates_hint") %></div>
          <div class="h5 mb-0">Disponibilités</div>

          <hr class="my-3 lv-divider" />

      <%# Réservation summary container: listens to calendar events and updates the right panel. %>
          <div
            class="row"
            data-controller="booking-summary"
            data-booking-summary-nightly-price-cents-value="<%= min_period&.nightly_price_cents.to_i %>"
            data-booking-summary-currency-value="<%= min_period&.currency.to_s.presence || "EUR" %>"
            data-action="availability-calendar:range-selected->booking-summary#update"
          >
        <%# Datepicker column: inline range picker (Stimulus + Flatpickr). %>
            <div class="col-12">
              <input
                type="text"
                data-controller="availability-calendar"
                data-availability-calendar-enabled-ranges-value='<%= (@enabled_ranges || []).to_json %>'
                data-availability-calendar-disabled-ranges-value='<%= (@disabled_ranges || []).to_json %>'
                aria-label="<%= t(".availability_calendar_aria") %>"
              />
            </div>

        <%# Summary column: hidden until a date range is selected; shows nightly/nights/total + CTA. %>
            <div class="col-12 mt-3">
              <div class="card lv-card p-3 d-none" data-booking-summary-target="panel">
            <div class="mb-2">
              <div class="text-muted"><%= t(".summary.nightly_rate") %></div>
              <div data-booking-summary-target="nightly"></div>
            </div>

            <div class="mb-2">
              <div class="text-muted"><%= t(".summary.nights") %></div>
              <div data-booking-summary-target="nights"></div>
            </div>

            <div class="mb-3">
              <div class="text-muted"><%= t(".summary.total") %></div>
              <div class="fw-bold" data-booking-summary-target="total"></div>
            </div>

            <% if user_signed_in? %>
              <%= link_to t(".book_button"), new_room_booking_path(@room), class: "btn btn-accent w-100", data: { "booking-summary-target": "cta" } %>
            <% else %>
              <%= link_to t(".book_button"), login_path(return_to: new_room_booking_path(@room)), class: "btn btn-accent w-100", data: { turbo: false, "booking-summary-target": "cta" } %>
            <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% if Array(@room.optional_services).any? %>
  <div class="card lv-card mt-4">
    <div class="card-body">
      <h2 class="h5 mb-3"><%= t(".optional_services.title") %></h2>
      <div class="d-grid gap-2">
          <% Array(@room.optional_services).each do |service| %>
            <% next unless service.is_a?(Hash) %>
            <% name = (service["name"] || service[:name]).to_s.strip %>
            <% price_cents = service["price_cents"] || service[:price_cents] %>
            <% next if name.blank? || price_cents.blank? %>

            <div class="d-flex justify-content-between align-items-center">
              <div><%= name %></div>
              <div class="text-muted"><%= format_price(price_cents, currency: "EUR") %></div>
            </div>
          <% end %>
        </div>
      <p class="text-muted mt-2 mb-0"><%= t(".optional_services.hint") %></p>
    </div>
  </div>
<% end %>

<%# Reviews section: reuse card-trip styling as a container (without image). %>
<div class="card lv-card mt-5">
  <div class="card-body">
    <h2 class="h5 mb-3"><%= t(".reviews.title") %></h2>

      <% if @reviews_count.to_i.positive? %>
        <div class="d-flex align-items-center gap-2">
          <span class="review-stars"><%= stars_for_rating(@average_rating) %></span>
          <span class="text-muted">
            <%= number_with_precision(@average_rating.to_f, precision: 1) %>/5 · <%= t(".reviews.count", count: @reviews_count) %>
          </span>
        </div>

        <%# Latest reviews list: we show the 2 most recent reviews for this room. %>
        <div class="mt-3">
          <% @latest_reviews.each do |review| %>
            <%# Single review card: author + date + stars + comment. %>
            <div class="card lv-card p-3 mb-2">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <strong><%= review.user.display_name %></strong>
                  <small class="text-muted">· <%= l(review.created_at.to_date, format: :short) %></small>
                </div>
                <span class="review-stars"><%= stars_for_rating(review.rating) %></span>
              </div>
              <div class="mt-2"><%= simple_format(review.comment) %></div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted mb-0"><%= t(".reviews.none") %></p>
      <% end %>
  </div>
</div>
