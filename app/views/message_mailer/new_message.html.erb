<% content_for :preheader do %>
  Nouveau message concernant la réservation ##<%= @booking.id %>.
<% end %>

<h1 style="margin:0 0 10px 0; font-size:20px; line-height:1.25;">Nouveau message</h1>
<p style="margin:0 0 10px 0; color:#6B7280;">Réservation #<%= @booking.id %></p>

<p style="margin:0 0 12px 0;"><strong>De :</strong> <%= @message.sender_type %></p>

<div style="background:#F3ECE1; border:1px solid rgba(31,41,55,0.10); border-radius:14px; padding:14px;">
  <div style="white-space:pre-wrap;"><%= ERB::Util.html_escape(@message.body.to_s) %></div>
</div>

<%= render "shared/email_button", url: @booking_url, label: "Voir la réservation" %>

<p style="margin:14px 0 0 0; color:#6B7280; font-size:13px;">Vous pouvez répondre directement depuis la conversation sur le site.</p>
