<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-5">
      <div class="card">
        <div class="card-body">
          <h2 class="h4 mb-3"><%= t("devise.passwords.new.title") %></h2>

          <p class="text-muted mb-3">
            <%= t("devise.passwords.new.instructions") %>
          </p>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email,
                          label: t("devise.passwords.new.email_label"),
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
            </div>

            <div class="form-actions d-grid">
              <%= f.button :submit, t("devise.passwords.new.submit"), class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
