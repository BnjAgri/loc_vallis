<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-5">
      <div class="card">
        <div class="card-body">
          <h2 class="h4 mb-3">Mot de passe oublié ?</h2>

          <p class="text-muted mb-3">
            Indiquez votre e-mail et nous vous enverrons les instructions pour réinitialiser votre mot de passe.
          </p>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email,
                          label: "E-mail",
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
            </div>

            <div class="form-actions d-grid">
              <%= f.button :submit, "Réinitialiser", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
