<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-5">
      <div class="card">
        <div class="card-body">
          <h2 class="h4 mb-3"><%= t('devise.registrations.new.sign_up') %></h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <% if resource_name == :owner %>
                <%= f.input :guesthouse_name,
                            label: t('devise.registrations.new.guesthouse_name'),
                            required: false,
                            input_html: { autocomplete: "organization" } %>
              <% end %>

              <div class="row g-2">
                <div class="col-12 col-md-6">
                  <%= f.input :first_name,
                              label: t('devise.registrations.new.first_name'),
                              required: true,
                              input_html: { autocomplete: "given-name" } %>
                </div>
                <div class="col-12 col-md-6">
                  <%= f.input :last_name,
                              label: t('devise.registrations.new.last_name'),
                              required: true,
                              input_html: { autocomplete: "family-name" } %>
                </div>
              </div>

              <%= f.input :email,
                          label: t('devise.registrations.new.email'),
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" }%>

              <%= f.input :postal_address,
                          label: t('devise.registrations.new.postal_address'),
                          required: false,
                          input_html: { autocomplete: "street-address" } %>

              <%= f.input :phone,
                          label: t('devise.registrations.new.phone'),
                          required: false,
                          input_html: { autocomplete: "tel" } %>

              <%= f.input :password,
                          required: true,
                          hint: (@minimum_password_length ? t('devise.registrations.new.minimum_password_length', count: @minimum_password_length) : nil),
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password" } %>
            </div>

            <div class="form-actions d-grid">
              <%= f.button :submit, t('devise.registrations.new.sign_up_button'), class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
