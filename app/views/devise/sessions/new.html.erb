<div data-controller="login-modal">
  <div data-login-modal-target="content">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <div class="d-flex gap-2 align-items-center">
          <%= f.button :submit, "Log in" %>
          <%= link_to "S'inscrire", new_user_registration_path, class: "btn btn-outline-primary" %>
        </div>

        <div class="mt-2">
          <%= link_to "Mot de passe oubliÃ© ?", new_user_password_path, class: "small text-muted" %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
