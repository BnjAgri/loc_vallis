<div class="container py-4">
  <%= render "shared/ui/page_header",
    title: "Mes réservations",
    subtitle: "Suivez l’état de vos demandes, paiements et échanges avec l’hôte.",
    actions: link_to("Inbox", inbox_path, class: "btn btn-soft") %>

  <% if @bookings.any? %>
    <div class="row g-3 mt-1">
      <% @bookings.each do |booking| %>
        <div class="col-12 col-md-6 col-lg-4">
          <%= render "shared/ui/booking_card", booking: booking %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="mt-4">
      <%= render "shared/ui/empty_state",
        title: "Aucune réservation pour le moment",
        body: "Explorez nos hébergements et envoyez une première demande.",
        cta: link_to("Voir les hébergements", rooms_path, class: "btn btn-accent") %>
    </div>
  <% end %>
</div>
