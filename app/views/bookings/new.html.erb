<h1>Demande de r√©servation pour <%= @room.name %></h1>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card-trip p-4" style="background-color: white;">
        <%= form_with model: [@room, @booking] do |f| %>
          <% if @booking.errors.any? %>
            <div class="alert alert-danger">
              <ul>
                <% @booking.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :start_date %>
            <%= f.text_field :start_date, class: "form-control", data: { controller: "flatpickr" } %>
          </div>

          <div class="mb-3">
            <%= f.label :end_date %>
            <%= f.text_field :end_date, class: "form-control", data: { controller: "flatpickr" } %>
          </div>

          <%= f.submit "Send request", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
